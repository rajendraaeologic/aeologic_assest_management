{
  "name": "aeologic_ams_backend",
  "version": "1.0.0",
  "description": "Aeologic Asset Management Solution",
  "main": "dist/server.js",
  "scripts": {
    "db-push": "npx prisma generate && npx prisma db push",
    "start": "node ./dist/server.js",
    "build": "npx tsc && tsc-alias",
    "dev": "nodemon -r tsconfig-paths/register ./src/server.ts",
    "gcp-build": "npm run build",
    "deploy": "gcloud functions deploy ams_api --gen2 --trigger-http --runtime nodejs22 --region us-central1 --source . --entry-point api --allow-unauthenticated --timeout 60 --max-instances 3 --build-env-vars-file env.json --env-vars-file env.json"
  },
  "author": "abhishek@aeologic.com",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-ses": "^3.682.0",
    "@google-cloud/functions-framework": "^4.0.0",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "express": "^5.0.1",
    "express-rate-limit": "^7.4.1",
    "fs": "^0.0.1-security",
    "generate-password": "^1.7.1",
    "helmet": "^8.0.0",
    "http-errors": "^2.0.0",
    "http-status": "^1.8.1",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "mongodb": "^6.10.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "sanitize-html": "^2.13.1",
    "uuid": "^11.0.2",
    "winston": "^3.16.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@prisma/client": "^5.21.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.8.6",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/sanitize-html": "^2.13.0",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.7",
    "prisma": "^5.21.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}
